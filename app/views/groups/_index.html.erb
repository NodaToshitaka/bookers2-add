<div class="card-list-container py-5" style="background-color: #ffffdd;">
  <% @groups.each do |group| %>
   <% @owner = User.find_by(id: group.owner_id) %>
   <div class="card w-50 mx-auto mt-4 shadow-lg">
    <%= link_to group_path(group) do %>
      <%= attachment_image_tag group, :image, class: "card-img-top"%>
    <% end %>
    <div class="card-body">
      <div class="row">
        <div class="col-3">
          <%= attachment_image_tag @owner, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg", class: "mt-3 rounded-circle"; %>
        </div>
        <div class="col-9">
          <p class="card-title">
            <%= link_to group_path(group) do %>
              <strong><%= group.name %></strong>
            <% end %>
          </p>
          <P class="card-text">
             紹介文：<%= group.introduction %>
          </P>
          <p class="card-text">
          OwnerName:
          <%= link_to user_path(@owner) do %>
            <%= @owner.name %>
          <% end %>
          </p>
          <p class="card-text">メンバー数<%= group.users.count %></p>
        </div>
      </div>
    </div>
   </div>
  <% end %>
</div>