
  <% chats.each do |chat| %>
    <% if chat.user_id == current_user.id %>
       <tr>
         <th>
           <p style="text-align: left; background-color: #bbffbb;"><%= chat.message %></p>
         </th>
         <th></th>
       </tr>
    <% else %>
       <tr>
          <th></th>
          <th>
            <p style="text-align: right; background-color: #77ff77;"><%= chat.message %></p>
          </th>
       </tr>
    <% end %>
  <% end %>