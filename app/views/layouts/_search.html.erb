<div class="form-inline">
  <%= form_with url: search_path, local: true, method: :get do |f|%>
    <%= f.text_field :word, class: 'form-control form-group' %>
    <%= f.select :range, options_for_select([['User'], ['Book'],['Tag']]), {}, class: 'btn btn-info form-control form-group' %>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backword_match"], ["部分一致","partial_match"]]), {}, class: 'btn btn-info form-control form-group' %>
    <%= f.submit "検索", class: 'btn btn-success form-control form-group' %>
  <% end %>
</div>